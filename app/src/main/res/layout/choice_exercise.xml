        android:background="#caddf4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="79dp"
        android:id="@+id/buttonitem18"/>

    <Button
        android:text="@string/item22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonitem18"
        android:textColor="#0d8dc9"
        android:textSize="30sp"
        android:background="#caddf4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="86dp"
        android:id="@+id/buttonitem22" />

    <Button
        android:id="@+id/boutonchgmtpatient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/changePatient"
        android:textSize="25sp"
        android:textColor="#0d8dc9"
        android:background="#9bc3f1"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/buttonitem22"
        android:layout_marginBottom="60dp" />

