<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:text="@string/instructionsItem22"
            android:textAlignment="center"
            android:textColor="#0d8dc9"
            android:textSize="30sp"
            android:textStyle="bold" />

    </LinearLayout>


    <ImageView
        android:contentDescription="@string/item22image"
        android:layout_width="42.6mm"
        android:layout_height="57.9mm"
        android:layout_centerInParent="true"
        android:src="@drawable/demo_item22" />

        <Button
            android:id="@+id/boutonDemarrer"
            android:layout_width="80dip"
            android:layout_height="80dip"
            android:background="@drawable/play"
            android:layout_marginLeft="25dip"
            android:layout_marginRight="25dip"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="53dp"/>

</RelativeLayout>